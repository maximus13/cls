<h1>Listing listings</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th>Posting</th>
      <th>Title</th>
      <th>Zip</th>
      <th>Description</th>
      <th>Sqft</th>
      <th>Rent</th>
      <th>Bedrooms</th>
      <th>Bathooms</th>
      <th>Street</th>
      <th>Xstreet</th>
      <th>City</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.username %></td>
        <td><%= listing.password %></td>
        <td><%= listing.Posting %></td>
        <td><%= listing.title %></td>
        <td><%= listing.zip %></td>
        <td><%= listing.description %></td>
        <td><%= listing.sqft %></td>
        <td><%= listing.rent %></td>
        <td><%= listing.bedrooms %></td>
        <td><%= listing.bathooms %></td>
        <td><%= listing.street %></td>
        <td><%= listing.Xstreet %></td>
        <td><%= listing.city %></td>
        <td><%= listing.state %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
